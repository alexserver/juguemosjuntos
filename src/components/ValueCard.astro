---
// Reusable ValueCard component for mission/values section
interface Props {
  icon: string;
  title: string;
  description: string;
  titleClass?: string;
  descriptionClass?: string;
}

const { icon, title, description, titleClass = '', descriptionClass = '' } = Astro.props;
---

<div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
  <div class="text-5xl mb-4">{icon}</div>
  <h3 class:list={["text-xl font-bold text-brand-purple mb-2", titleClass]}>{title}</h3>
  <p class:list={["text-gray-600", descriptionClass]}>{description}</p>
</div>
