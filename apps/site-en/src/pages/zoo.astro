---
import loteriaLogo from "../assets/images/logos/zoo-bingo-logo.png";
import Button from "../components/Button.astro";
import FeatureList from "../components/FeatureList.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import ValueCard from "../components/ValueCard.astro";
import Layout from "../layouts/Layout.astro";

// Character images
import char01 from "../assets/images/zoo/characters/01.png";
import char02 from "../assets/images/zoo/characters/02.png";
import char03 from "../assets/images/zoo/characters/03.png";
import char04 from "../assets/images/zoo/characters/04.png";
import char05 from "../assets/images/zoo/characters/05.png";
import char06 from "../assets/images/zoo/characters/06.png";
import char07 from "../assets/images/zoo/characters/07.png";
import char08 from "../assets/images/zoo/characters/08.png";
import char09 from "../assets/images/zoo/characters/09.png";

// Value card images
import arteImg from "../assets/images/zoo/misc/arte.png";
import disenioImg from "../assets/images/zoo/misc/disenio.png";
import diversionImg from "../assets/images/zoo/misc/diversion.png";
import memoriaImg from "../assets/images/zoo/misc/memoria.png";

// Marketing images
import marketingImg01 from "../assets/images/zoo/marketing/01.png";
import marketingImg02 from "../assets/images/zoo/marketing/02.png";

// Character data
import charactersData from "../data/characters.json";

// Product data
import productsData from "../data/products.json";

const characterImages = [
  char01,
  char02,
  char03,
  char04,
  char05,
  char06,
  char07,
  char08,
  char09,
];

const characters = charactersData.zoo.map((charData, index) => ({
  ...charData,
  image: characterImages[index],
}));

// Product data
const zooProduct = productsData.find((p) => p.id === "zoo");
const formattedPrice = `$${zooProduct?.price} ${zooProduct?.currency}`;
const ctaLink = zooProduct?.cta_link || "#";
---

<Layout title="Zoo Bingo - Juguemos Juntos">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-zoo-cream py-20 md:py-32">
      <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <!-- Marketing Image -->
            <div class="flex justify-center">
              <div
                class="relative w-full max-w-md h-64 md:h-120 overflow-hidden rounded-2xl shadow-2xl"
              >
                <img
                  src={marketingImg01.src}
                  alt="Zoo Bingo"
                  class="w-full h-full object-cover"
                />
                <!-- Logo Badge -->
                <div
                  class="absolute top-3 right-3 md:top-4 md:right-4 bg-white/70 rounded-xl p-2 md:p-3 shadow-lg"
                >
                  <img
                    src={loteriaLogo.src}
                    alt="Zoo Bingo Logo"
                    class="h-16 md:h-20 drop-shadow-lg"
                  />
                </div>
              </div>
            </div>

            <!-- Hero Content -->
            <div class="text-center md:text-left">
              <h1
                class="text-4xl md:text-6xl font-bold text-zoo-purple-dark mb-6"
              >
                Zoo Bingo!
              </h1>
              <p class="text-xl md:text-2xl text-gray-800 mb-8">
                A magical and fun version of the classic Mexican game. Perfect
                for kids and family gatherings.
              </p>
              <div class="text-center md:text-left mb-4">
                <span
                  class="text-4xl md:text-5xl font-bold text-zoo-orange-dark"
                >
                  {formattedPrice}
                </span>
                <span class="text-lg text-gray-600 ml-2">Digital PDF</span>
              </div>
              <Button variant="zoo" href={ctaLink} target="_blank">
                Buy Now
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included Section -->
    <section class="py-20 bg-zoo-purple-dark">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2
            class="text-3xl md:text-5xl font-bold text-zoo-orange-bright mb-12 text-center"
          >
            What's Included in Zoo Bingo?
          </h2>
          <div class="space-y-6">
            <FeatureList
              icon="ü¶Å"
              text="24 unique zoo animal characters"
              textClass="text-zoo-cream"
            />
            <FeatureList
              icon="üìã"
              text="12 game boards"
              textClass="text-zoo-cream"
            />
            <FeatureList
              icon="üå±"
              text="Digital PDF ready to print at home - instant download!"
              textClass="text-zoo-cream"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Why You'll Love It Section -->
    <section class="py-20 bg-gradient-to-b from-zoo-purple to-zoo-purple-dark">
      <div class="container mx-auto px-4">
        <h2
          class="text-3xl md:text-5xl font-bold text-zoo-orange-bright mb-12 text-center"
        >
          Why You'll Love It
        </h2>
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto"
        >
          <ValueCard
            image={diversionImg}
            title="Family Fun"
            description="Perfect for sharing special moments together."
            cardClass="bg-zoo-cream"
            titleClass="text-zoo-purple-dark"
            descriptionClass="text-zoo-purple"
          />
          <ValueCard
            image={disenioImg}
            title="Adorable Designs"
            description="Cute animals designed for all ages."
            cardClass="bg-zoo-cream"
            titleClass="text-zoo-purple-dark"
            descriptionClass="text-zoo-purple"
          />
          <ValueCard
            image={arteImg}
            title="Exclusive Art"
            description="Colorful and original illustrations."
            cardClass="bg-zoo-cream"
            titleClass="text-zoo-purple-dark"
            descriptionClass="text-zoo-purple"
          />
          <ValueCard
            image={memoriaImg}
            title="Educational"
            description="Learn about animals while playing."
            cardClass="bg-zoo-cream"
            titleClass="text-zoo-purple-dark"
            descriptionClass="text-zoo-purple"
          />
        </div>
      </div>
    </section>

    <!-- Character Gallery Section -->
    <section class="py-20 bg-gradient-to-b from-zoo-green to-zoo-green-dark">
      <div class="container mx-auto px-4">
        <h2
          class="text-3xl md:text-5xl font-bold text-zoo-purple mb-6 text-center"
        >
          Meet the Characters
        </h2>
        <p class="text-center text-zoo-cream mb-12 max-w-2xl mx-auto">
          Each character was designed with love and color so kids can learn
          about animals while playing.
        </p>

        <!-- Character cards -->
        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 max-w-4xl mx-auto"
        >
          {
            characters.map((character) => (
              <div class="aspect-square rounded-2xl overflow-hidden shadow-lg shadow-zoo-orange-bright/20 hover:shadow-2xl hover:shadow-zoo-orange-bright/40 transition-all duration-300 hover:scale-105 border-2 border-zoo-orange-bright/20 flex flex-col">
                <div class="flex-1 overflow-hidden">
                  <img
                    src={character.image.src}
                    alt={character.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="bg-zoo-cream text-gray-800 py-3 px-4 text-center font-semibold">
                  {character.name}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- How to Play Section -->
    <section
      class="py-20 bg-gradient-to-b from-zoo-orange to-zoo-orange-dark text-white"
    >
      <div class="container mx-auto px-4">
        <h2
          class="text-3xl md:text-5xl font-bold mb-12 text-center text-zoo-purple"
        >
          How to Play
        </h2>
        <div class="max-w-5xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <!-- Steps Content -->
            <div class="space-y-8">
              <div class="flex items-start gap-4">
                <div
                  class="shrink-0 w-12 h-12 bg-zoo-orange text-white rounded-full flex items-center justify-center text-xl font-bold"
                >
                  1
                </div>
                <p class="text-lg pt-2">
                  Print the PDF file and carefully cut out all the game boards
                  and character cards.
                </p>
              </div>
              <div class="flex items-start gap-4">
                <div
                  class="shrink-0 w-12 h-12 bg-zoo-orange text-white rounded-full flex items-center justify-center text-xl font-bold"
                >
                  2
                </div>
                <p class="text-lg pt-2">Distribute the boards among players.</p>
              </div>
              <div class="flex items-start gap-4">
                <div
                  class="shrink-0 w-12 h-12 bg-zoo-orange text-white rounded-full flex items-center justify-center text-xl font-bold"
                >
                  3
                </div>
                <p class="text-lg pt-2">
                  One player calls out the cards in traditional style: "The
                  Lioooon!"
                </p>
              </div>
              <div class="flex items-start gap-4">
                <div
                  class="shrink-0 w-12 h-12 bg-zoo-orange text-white rounded-full flex items-center justify-center text-xl font-bold"
                >
                  4
                </div>
                <p class="text-lg pt-2">
                  Place a bean or small stone on your board if you have the
                  character that was called
                </p>
              </div>
              <div class="flex items-start gap-4">
                <div
                  class="shrink-0 w-12 h-12 bg-zoo-orange text-white rounded-full flex items-center justify-center text-xl font-bold"
                >
                  5
                </div>
                <p class="text-lg pt-2">
                  Win by completing a horizontal or vertical line, or by filling
                  your entire board!
                </p>
              </div>
            </div>

            <!-- Marketing Image -->
            <div class="flex justify-center">
              <div
                class="relative w-full max-w-md h-64 md:h-120 overflow-hidden rounded-2xl shadow-2xl"
              >
                <img
                  src={marketingImg02.src}
                  alt="How to play Zoo Bingo"
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-zoo-purple">
      <div class="container mx-auto px-4">
        <h2
          class="text-3xl md:text-5xl font-bold text-zoo-cream mb-12 text-center"
        >
          What Families Say
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <TestimonialCard
            quote="My kids loved the cute animals, they learned so much while playing."
            author="Maria"
            cardClass="bg-zoo-purple-dark border border-zoo-orange-bright/20"
            quoteMarkClass="text-zoo-orange-bright"
            quoteClass="text-zoo-cream"
            authorClass="text-zoo-orange-bright"
          />
          <TestimonialCard
            quote="A fun way to teach about zoo animals."
            author="Carlos"
            cardClass="bg-zoo-purple-dark border border-zoo-orange-bright/20"
            quoteMarkClass="text-zoo-orange-bright"
            quoteClass="text-zoo-cream"
            authorClass="text-zoo-orange-bright"
          />
        </div>
      </div>
    </section>

    <!-- CTA Final Section -->
    <section
      id="buy"
      class="py-20 bg-gradient-to-b from-zoo-purple-dark to-zoo-purple"
    >
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          <div
            class="bg-zoo-purple-dark/90 rounded-3xl p-12 shadow-2xl border-2 border-zoo-orange-bright/50"
          >
            <h2
              class="text-3xl md:text-5xl font-bold text-zoo-orange-bright mb-6"
            >
              ü¶Å Get it now and discover the animal world with your family!
            </h2>
            <p class="text-xl text-zoo-cream mb-8">
              Digital PDF ready to print at home - instant download!
            </p>
            <div class="text-center mb-6">
              <span
                class="text-5xl md:text-6xl font-bold text-zoo-orange-bright"
              >
                {formattedPrice}
              </span>
            </div>
            <Button
              variant="zoo"
              class="text-xl px-8 py-4"
              href={ctaLink}
              target="_blank"
            >
              Buy Now
            </Button>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </main>
</Layout>
