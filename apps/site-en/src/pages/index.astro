  <Header />

  <main>
    <!-- Hero Section -->
    <section
      id="home"
      class="bg-linear-to-br from-brand-yellow/20 via-brand-turquoise/20 to-brand-purple/20 py-20 md:py-32"
    >
      <div class="container mx-auto px-4">
