---
// Reusable ValueCard component for mission/values section
import type { ImageMetadata } from "astro";

interface Props {
  icon?: string;
  image?: ImageMetadata;
  title: string;
  description: string;
  cardClass?: string;
  titleClass?: string;
  descriptionClass?: string;
}

const {
  icon,
  image,
  title,
  description,
  cardClass = "bg-white",
  titleClass = "text-gray-900",
  descriptionClass = "text-gray-600",
} = Astro.props;
---

<div
  class:list={[
    cardClass,
    "rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1",
  ]}
>
  {
    image ? (
      <div class="mb-4">
        <img
          src={image.src}
          alt={title}
          class="w-56 h-56 object-contain rounded-xl"
        />
      </div>
    ) : (
      <div class="text-5xl mb-4">{icon}</div>
    )
  }
  <h3 class:list={["text-xl font-bold mb-2", titleClass]}>
    {title}
  </h3>
  <p class:list={[descriptionClass]}>{description}</p>
</div>
